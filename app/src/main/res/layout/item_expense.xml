<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/spacing_10">

    <ImageView
        android:id="@+id/img_type"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/ic_launcher"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/spacing_16"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="@dimen/spacing_20">

            <TextView
                android:id="@+id/txt_expense_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shopping"
                android:textColor="@color/black"
                android:textSize="@dimen/font_16_subtitle"></TextView>

            <TextView
                android:layout_marginLeft="@dimen/spacing_10"
                android:id="@+id/txt_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txt_expense_type"
                android:text="36.1%"
                android:textSize="@dimen/font_16_subtitle"></TextView>

            <TextView
                android:id="@+id/txt_expense_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="-123.4566 Ä‘"
                android:textColor="@color/black"
                android:textSize="@dimen/font_16_subtitle"
                android:textStyle="bold"></TextView>
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>