<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:src="@drawable/appicon" />

        <TextView
            android:textColor="@color/blue_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:text="MONEY KEEPER"
            android:textSize="@dimen/font_26"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_marginTop="4sp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/font_16_subtitle"
                android:textColor="@android:color/black"
                android:text="Developer : Viet Hua Hoang"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="@dimen/font_16_subtitle"
                android:textColor="@android:color/black"
                android:text="Contact: +84 932 095 081"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="@dimen/font_16_subtitle"
                android:textColor="@android:color/black"
                android:text="Email: huaviet999@gmail.com"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>



    </LinearLayout>


    <Button
        android:textColor="@android:color/white"
        android:background="@drawable/border_circular_blue"
        android:id="@+id/btn_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="CLOSE" />
</RelativeLayout>